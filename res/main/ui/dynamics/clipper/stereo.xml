<plugin resizable="true">
	<grid rows="3" cols="7" bg.color="bg_schema" ipadding="0" transpose="true">
		<!-- preamp and lufs limit col -->
		<cell rows="3">
			<hbox vexpand="true">
				<vbox vfill="true" >
					<label text="labels.input" halign="0"/>
					<knob id="g_in" pad.r="4" pad.b="4"/>
					<value id="g_in" sline="true" halign="0"/>

					<label text="labels.output" expand="true" halign="0"/>
					<knob id="g_out" pad.r="4"/>
					<value id="g_out" width.min="50" sline="true" halign="0"/>
					
					<label text="labels.threshold" halign="0"/>
					<hbox>
						<button id="boost" height="18" hfill="true" text="labels.boost_" visibility=":boost" ui:inject="Button_violet"/>
						<button id="boost" height="18" hfill="true" text="labels.boost_" visibility="!:boost" ui:inject="Button_inactive"/>
					</hbox>
					<knob id="thresh" scolor="threshold" pad.r="4"/>
					<value id="thresh" sline="true" halign="0"/>

					<button id="lufs_on" pad.h="6" pad.v="4" height="18" text="labels.lufs_limit" ui:inject="Button_lufs" />
					<hbox pad.t="4">
						<knob id="lufs_th" ui:inject="Knob_meter_lufs" meter.max=":lufs_rl" visibility=":lufs_on"/>
						<knob id="lufs_th" scolor="cycle_inactive" visibility="!:lufs_on"/>
					</hbox>
					<value id="lufs_th" pad.v="4"/>
					<void vexpand="true"/>
				</vbox>
				<vsep pad.h="2" bg.color="bg" hreduce="true"/>
				<!-- LUFS gain reduction meter -->
				<ledmeter vexpand="true" angle="1">
				<ledchannel
					id="lufs_gr"
					min="-24 db"
					max="0 db"
					log="true"
					balance="0 db"
					balance.visibility="true"
					type="peak"
					value.color=":lufs_on ? 'dark_lufs' : 'cycle_inactive'"
					yellow.color=":lufs_on ? 'meter_yellow' : 'cycle_inactive'"
					balance.color=":lufs_on ? 'lufs' : 'cycle_inactive'"/>
				</ledmeter>
			</hbox>
		</cell>

		<!-- separator -->
		<cell rows="3">
			<vsep pad.h="2" bg.color="bg" hreduce="true"/>
		</cell>

		<!-- buttons line -->
		<cell cols="3">
			<hbox pad.v="4" pad.h="6">
				<label text="labels.dither:" />
				<combo id="dither"/>
				<void expand="true" />
				<ui:with pad.r="4">
					<void hexpand="true"/>
					<button id="op" ui:inject="Button_green" text="labels.odp" />
					<button id="ce" text="labels.signal.clipping" pad.l="8" />
					<button id="clog" text="labels.log_scale" ui:inject="Button_yellow" />
					
					<label text="labels.function" pad.l="8"/>
				</ui:with>
				<combo id="cf"/>
			</hbox>
		</cell>
		<!-- separator -->
		<cell cols="3">
			<hsep pad.v="2" bg.color="bg" vreduce="true"/>
		</cell>
		<!-- graph and knobs overdrive protection -->
		<vbox>
			<hbox>
				<group ui:inject="GraphGroup" ipadding="0" expand="true" fill="true" text="labels.graphs.overdrive_protection">
					<!-- Overdrive protection graph -->
					<graph width.min="265" height.min="215" expand="true" fill="true">
						<origin hpos="-1" vpos="-1" visible="false"/>
						
						<!-- Gray grid -->
						<ui:for id="g" first="-15" last="3" step="6">
							<marker v="${g} db" color="graph_alt_1"/>
							<marker v="${g} db" ox="1" oy="0" color="graph_alt_1"/>
						</ui:for>
						
						<!-- Yellow grid -->
						<ui:for id="g" first="-12" last="-6" step="6">
							<marker v="${g} db" color="graph_sec"/>
							<marker v="${g} db" ox="1" oy="0" color="graph_sec"/>
						</ui:for>

						<!-- Axes and boundaries -->
						<marker v="1" ox="1" oy="0" dv="1" dx=":_a_width" dy=":_a_height" color="graph_alt_1" width="2" smooth="true"/>
						<axis min="-18 db" max="6 db" color="graph_prim" angle="0.0" log="true" visibility="false"/>
						<axis min="-18 db" max="6 db" color="graph_prim" angle="0.5" log="true" visibility="false"/>
						<axis min="-18" max="6" zero="-18" color="graph_prim" angle="0.0" visibility="false"/>

						<!-- 0 dB markers -->
						<marker v="0 db" ox="0" oy="1" width="2" color="graph_prim"/>
						<marker v="0 db" ox="1" oy="0" width="2" color="graph_prim"/>
						
						<!-- Meshes -->
						<mesh id="opc" width="3" color=":op ? 'green' : 'graph_prim'" smooth="true"/>
						<dot x.id="odx_l" y.id="ody_l" color="left" bcolor="left" visibility=":op"/>
						<dot x.id="odx_r" y.id="ody_r" color="right" bcolor="right" visibility=":op"/>

						<!-- Markers -->
						<marker
							id="th"
							ox="2"
							width="2"
							editable="true"
							visibility=":op"
							fill="0.5"
							color.a="0.2"
							hcolor.a="0.1"
							lcolor.a="0.8"
							hlcolor.a="0.6"
							rcolor.a="0.8"
							hrcolor.a="0.6"
							color="threshold"
							hcolor="threshold"
							lcolor="threshold"
							hlcolor="threshold"
							rcolor="threshold"
							hrcolor="threshold"/>
						<marker
							id="th"
							ox="2"
							width="2"
							editable="true"
							visibility="!:op"
							fill="0.5"
							color.a="0.2"
							hcolor.a="0.1"
							lcolor.a="0.8"
							hlcolor.a="0.6"
							rcolor.a="0.8"
							hrcolor.a="0.6"
							color="graph_prim"
							hcolor="graph_prim"
							lcolor="graph_prim"
							hlcolor="graph_prim"
							rcolor="graph_prim"
							hrcolor="graph_prim"/>
						
						<!-- Text -->
						<text x="0 db" y="0 db" text="0" halign="1" valign="1"/>
						<ui:with x="0 db" halign="1" valign="-1">
							<text y="6 db" text="graph.units.db"/>
							<text y="3 db" text="+3"/>
							<text y="-3 db" text="-3"/>
							<text y="-6 db" text="-6"/>
							<text y="-9 db" text="-9"/>
							<text y="-12 db" text="-12"/>
							<text y="-15 db" text="-15"/>
							<text y="-18 db" text="graph.axis.out" valign="1"/>
						</ui:with>
						<ui:with y="0 db" halign="-1" valign="1">
							<text x="6 db" text="graph.units.db"/>
							<text x="3 db" text="+3"/>
							<text x="-3 db" text="-3"/>
							<text x="-6 db" text="-6"/>
							<text x="-9 db" text="-9"/>
							<text x="-12 db" text="-12"/>
							<text x="-15 db" text="-15"/>
							<text x="-18 db" text="graph.axis.in" halign="1"/>
						</ui:with>
						<text x=":th" y="-18 db" ox="2" text="graph.values.x:db:f" text:value=":th" text.eval="true" color=":op ? 'threshold' : 'graph_prim'" halign="(:th lt -6) ? 1 : -1" valign="1"/>
					</graph>
				</group>
				<void pad.h="2" bg.color="bg" hreduce="true"/>
				<!-- ODP gain reduction meter -->
				<vbox>
					<label text="labels.odp" padding="4"/>
					<ledmeter vexpand="true" angle="1">
						<ledchannel
							id="odr_l"
							min="-12 db"
							max="0 db"
							log="true"
							balance="0 db"
							balance.visibility="true"
							type="peak"
							value.color=":op ? 'dark_green' : 'cycle_inactive'"
							yellow.color=":op ? 'meter_yellow' : 'cycle_inactive'"
							balance.color=":op ? 'green' : 'cycle_inactive'"/>
						<ledchannel
							id="odr_r"
							min="-12 db"
							max="0 db"
							log="true"
							balance="0 db"
							balance.visibility="true"
							type="peak"
							value.color=":op ? 'dark_green' : 'cycle_inactive'"
							yellow.color=":op ? 'meter_yellow' : 'cycle_inactive'"
							balance.color=":op ? 'green' : 'cycle_inactive'"/>
					</ledmeter>
				</vbox>
			</hbox>
			<void pad.v="2" bg.color="bg" vreduce="true"/>
			<!-- controls -->
			<hbox pad.v="4">
				<!-- thresh -->
				<hbox fill="false" pad.l="6" pad.r="10">
					<knob id="th" scolor=":op ? 'threshold' : 'cycle_inactive'"/>
					<vbox vfill="false" width="50" pad.l="4">
						<label text="labels.thresh_old" halign="0"/>
						<value id="th" sline="true" halign="0"/>
					</vbox>
				</hbox>
				
				<!-- knee -->
				<hbox fill="false">
					<knob id="kn" scolor=":op ? 'green' : 'cycle_inactive'"/>
					<vbox vfill="false" width="50" pad.l="4">
						<label text="labels.knee" halign="-1"/>
						<value id="kn" sline="true" halign="0"/>
					</vbox>
				</hbox>
				
				<void hexpand="true" hfill="true"/>
			</hbox>
		</vbox>
	
		<cell rows="2">
			<vsep pad.h="2" bg.color="bg" hreduce="true"/>
		</cell>
		
		<vbox>
			<hbox>
				<group ui:inject="GraphGroup" ipadding="0" expand="true"
					fill="true" text="labels.graphs.clipping">
					<vbox>
						<!-- Clipper function graph linear -->
						<graph width.min="265" height.min="215" expand="true"
							fill="true" visibility="!:clog">
							<origin hpos="-0.8" vpos="-2.0/3.0" visible="false" />
							<origin hpos="-1" vpos="0" visible="false" />
	
							<ui:with ox="0" oy="1">
								<marker v="0.25" color="graph_alt_1" />
								<marker v="0.75" color="graph_alt_1" />
								<marker v="1.25" color="graph_alt_1" />
								<marker v="1.75" color="graph_alt_1" />
							</ui:with>
							<ui:with ox="1" oy="0">
								<marker v="0.25" color="graph_alt_1" />
								<marker v="0.75" color="graph_alt_1" />
							</ui:with>
	
							<ui:with ox="0" oy="1">
								<marker v="0.5" color="graph_sec" />
								<marker v="1" color="graph_sec" />
								<marker v="1.5" color="graph_sec" />
								<marker v="2" color="graph_sec" />
							</ui:with>
							<ui:with ox="1" oy="0">
								<marker v="0.5" color="graph_sec" />
								<marker v="1" color="graph_sec" />
							</ui:with>
	
							<!-- Axes and boundaries -->
							<marker v="1" ox="1" oy="0" dv="1" dx=":_a_width * 0.6"
								dy=":_a_height" color="graph_alt_1" width="2" smooth="true" />
							<axis min="-0.25" max="2.25" color="graph_prim" angle="0.0"
								width="2" />
							<axis min="-0.25" max="1.25" color="graph_prim" angle="0.5"
								width="2" />
							<axis o="1" min="-0.25" max="2.25" color="graph_prim"
								angle="0.0" zero="-0.25" visibility="false" />
	
							<!-- Meshes -->
							<mesh id="cfc" x.index="0" y.index="1" width="3"
								color=":ce ? 'graph_mesh': 'graph_prim'" smooth="true" />
							<dot x.id="cfx_l" y.id="cfy_l" color="left" bcolor="left" visibility=":ce" />
							<dot x.id="cfx_r" y.id="cfy_r" color="right" bcolor="right" visibility=":ce" />
	
							<!-- Markers -->
							<marker id="ct" o="1" ox="2" width="2" editable="true"
								visibility=":ce" fill="0.5" color.a="0.2"
								hcolor.a="0.1" lcolor.a="0.8" hlcolor.a="0.6" rcolor.a="0.8"
								hrcolor.a="0.6" color="threshold" hcolor="threshold"
								lcolor="threshold" hlcolor="threshold" rcolor="threshold"
								hrcolor="threshold" />
							<marker id="ct" o="1" ox="2" width="2" editable="true"
								visibility="!:ce" fill="0.5" color.a="0.2"
								hcolor.a="0.1" lcolor.a="0.8" hlcolor.a="0.6" rcolor.a="0.8"
								hrcolor.a="0.6" color="graph_prim" hcolor="graph_prim"
								lcolor="graph_prim" hlcolor="graph_prim" rcolor="graph_prim"
								hrcolor="graph_prim" />
	
							<!-- Text -->
							<ui:with x="0" halign="-1" valign="-1">
								<text y="0.5" text="0.5" />
								<text y="1" text="1" />
								<text y="1.25" text="graph.axis.out" valign="-1" />
							</ui:with>
							<ui:with y="0" halign="1" valign="-1">
								<text x="0" text="0" />
								<text x="0.5" text="0.5" />
								<text x="1.0" text="1" />
								<text x="1.5" text="1.5" />
								<text x="2.0" text="2" />
								<text x="2.25" text="graph.axis.in" halign="-1" />
							</ui:with>
							<text x=":ct" y="1.25" text="graph.values.x::f"
								text:value=":ct" text.eval="true"
								color=":ce ? 'threshold' : 'graph_prim'" halign="1"
								valign="-1" />
							<text x=":ct" y="-0.25" text="graph.values.x:db:f"
								text:value="20 * lg :ct" text.eval="true"
								color=":ce ? 'threshold' : 'graph_prim'" halign="1"
								valign="1" />
						</graph>
	
						<!-- Clipper function graph logarithmic -->
						<graph width.min="265" height.min="215" expand="true"
							fill="true" visibility=":clog">
							<origin hpos="-1" vpos="-1" visible="false" />
	
							<!-- Gray grid -->
							<ui:for id="g" first="-30" last="6" step="12">
								<marker v="${g} db" color="graph_alt_1" />
								<marker v="${g} db" ox="1" oy="0" color="graph_alt_1" />
							</ui:for>
	
							<!-- Yellow grid -->
							<ui:for id="g" first="-24" last="-12" step="12">
								<marker v="${g} db" color="graph_sec" />
								<marker v="${g} db" ox="1" oy="0" color="graph_sec" />
							</ui:for>
	
							<!-- Axes and boundaries -->
							<marker v="1" ox="1" oy="0" dv="1" dx=":_a_width"
								dy=":_a_height" color="graph_alt_1" width="2" smooth="true" />
							<axis min="-36 db" max="12 db" color="graph_prim" angle="0.0"
								log="true" visibility="false" />
							<axis min="-36 db" max="12 db" color="graph_prim" angle="0.5"
								log="true" visibility="false" />
	
							<!-- 0 dB markers -->
							<marker v="0 db" ox="0" oy="1" width="2" color="graph_prim" />
							<marker v="0 db" ox="1" oy="0" width="2" color="graph_prim" />
	
							<!-- Meshes -->
							<mesh id="cfc" x.index="2" y.index="3" width="3"
								color=":ce ? 'graph_mesh': 'graph_prim'" smooth="true" />
							<dot x.id="cfx_l" y.id="cfy_l" color="left" bcolor="left" visibility=":ce" />
							<dot x.id="cfx_r" y.id="cfy_r" color="right" bcolor="right" visibility=":ce" />
	
							<!-- Markers -->
							<marker id="ct" width="2" editable="true"
								visibility=":ce" fill="0.5" color.a="0.2"
								hcolor.a="0.1" lcolor.a="0.8" hlcolor.a="0.6" rcolor.a="0.8"
								hrcolor.a="0.6" color="threshold" hcolor="threshold"
								lcolor="threshold" hlcolor="threshold" rcolor="threshold"
								hrcolor="threshold" />
							<marker id="ct" width="2" editable="true"
								visibility="!:ce" fill="0.5" color.a="0.2"
								hcolor.a="0.1" lcolor.a="0.8" hlcolor.a="0.6" rcolor.a="0.8"
								hrcolor.a="0.6" color="graph_prim" hcolor="graph_prim"
								lcolor="graph_prim" hlcolor="graph_prim" rcolor="graph_prim"
								hrcolor="graph_prim" />
	
							<!-- Text -->
							<text x="0 db" y="0 db" text="0" halign="1" valign="1" />
							<ui:with x="0 db" halign="1" valign="-1">
								<text y="12 db" text="graph.units.db" />
								<text y="6 db" text="+6" />
								<text y="-6 db" text="-6" />
								<text y="-12 db" text="-12" />
								<text y="-18 db" text="-18" />
								<text y="-24 db" text="-24" />
								<text y="-30 db" text="-30" />
								<text y="-36 db" text="graph.axis.out" valign="1" />
							</ui:with>
							<ui:with y="0 db" halign="-1" valign="1">
								<text x="12 db" text="graph.units.db" />
								<text x="6 db" text="+6" />
								<text x="-6 db" text="-6" />
								<text x="-12 db" text="-12" />
								<text x="-18 db" text="-18" />
								<text x="-24 db" text="-24" />
								<text x="-30 db" text="-30" />
								<text x="-36 db" text="graph.axis.in" halign="1" />
							</ui:with>
	
							<text x=":ct" y="12 db" text="graph.values.x::f"
								text:value=":ct" text.eval="true"
								color=":ce ? 'threshold' : 'graph_prim'"
								halign="(:ct lt -12 db) ? 1 : -1" valign="-1" />
							<text x=":ct" y="-36 db" text="graph.values.x:db:f"
								text:value="20 * lg :ct" text.eval="true"
								color=":ce ? 'threshold' : 'graph_prim'"
								halign="(:ct lt -12 db) ? 1 : -1" valign="1" />
						</graph>
					</vbox>
				</group>
				<void pad.h="2" bg.color="bg" hreduce="true" />
				<!-- Clipper gain reduction meter -->
				<vbox>
					<label text="labels.clp" padding="4" />
					<ledmeter vexpand="true" angle="1">
						<ledchannel id="cfr_l" min="-12 db" max="12 db"
							log="true" balance="0 db" balance.visibility="true" type="peak"
							value.color=":ce ? 'blue' : 'cycle_inactive'"
							yellow.color=":ce ? 'meter_yellow' : 'cycle_inactive'"
							balance.color=":ce ? 'balance' : 'cycle_inactive'" />
						<ledchannel id="cfr_r" min="-12 db" max="12 db"
							log="true" balance="0 db" balance.visibility="true" type="peak"
							value.color=":ce ? 'blue' : 'cycle_inactive'"
							yellow.color=":ce ? 'meter_yellow' : 'cycle_inactive'"
							balance.color=":ce ? 'balance' : 'cycle_inactive'" />
					</ledmeter>
				</vbox>
			</hbox>
		
			<void pad.v="2" bg.color="bg" vreduce="true" />
		
			<!-- controls -->
			<hbox pad.v="4">
				<void hexpand="true" hfill="true" />
				<!-- thres -->
				<hbox fill="false" pad.l="6" pad.r="10">
					<knob id="ct" scolor=":ce ? 'threshold' : 'cycle_inactive'" />
					<vbox vfill="false" width="50" pad.l="4">
						<label text="labels.thresh_old" halign="0" />
						<value id="ct" sline="true" halign="0" />
					</vbox>
				</hbox>
	
				<!-- pumping -->
				<hbox fill="false" pad.r="6">
					<knob id="cp" scolor=":ce ? 'kscale' : 'cycle_inactive'" />
					<vbox vfill="false" width="50" pad.l="4">
						<label text="labels.pumping" halign="-1" />
						<value id="cp" sline="true" halign="0" />
					</vbox>
				</hbox>
			</hbox>
		</vbox>
		
		<cell rows="3">
			<vsep pad.h="2" bg.color="bg" hreduce="true" />
		</cell>
	
		<cell rows="3" hexpand="true" hfill="true">
			<grid rows="5" cols="11" hexpand="true" hfill="true" ipadding="0">
				<!-- row 1 -->
				<cell rows="3">
					<hbox pad.v="4" pad.h="6">
						<void hfill="true" hexpand="true" />
						<knob id="or" scolor="kscale" />
						<vbox vfill="false" pad.l="4" pad.r="10" width="50">
							<label text="labels.reactivity" halign="0" />
							<value id="or" sline="true" halign="0" />
						</vbox>
	
						<knob id="slink" scolor="kscale" />
						<vbox vfill="false" pad.l="4" pad.r="10" width="50">
							<label text="labels.stereo_link" halign="0" />
							<value id="slink" sline="true" halign="0" />
						</vbox>
					</hbox>
				</cell>
				<cell rows="5">
					<vsep pad.h="2" bg.color="bg" hreduce="true"/>
				</cell>
				<cell rows="2">
					<void />
				</cell>
				<cell rows="5">
					<vsep pad.h="2" bg.color="bg" hreduce="true"/>
				</cell>
				<cell cols="3">
					<label text="labels.units.db" pad.b="3" pad.t="3"/>
				</cell>
				<cell rows="5">
					<vsep pad.h="2" bg.color="bg" hreduce="true"/>
				</cell>
				<cell cols="3">
					<label text="labels.units.lufs" pad.b="3" pad.t="3"/>
				</cell>
				
				<!-- row 2 -->
				<cell cols="3">
					<hsep pad.v="2" bg.color="bg" vreduce="true" />
				</cell>
				<cell cols="3">
					<hsep pad.v="2" bg.color="bg" vreduce="true" />
				</cell>
				
				<!-- row 3 -->
				<grid rows="2" cols="2">
					<cell cols="2"><label text="labels.gain_" padding="4" /></cell>
					<button id="grg_l" size="10" ui:inject="Button_blue" led="true" />
					<button id="grg_r" size="10" ui:inject="Button_blue" led="true" />
				</grid>
				<grid rows="2" cols="2">
					<cell cols="2"><label text="labels.chan.in" padding="4" /></cell>
					<button id="ilg_l" size="10" ui:inject="Button_left" led="true" />
					<button id="ilg_r" size="10" ui:inject="Button_right" led="true" />
				</grid>
				<cell rows="3">
					<vsep pad.h="2" bg.color="bg" hreduce="true"/>
				</cell>
				<grid rows="2" cols="2">
					<cell cols="2"><label text="labels.chan.out" padding="4" /></cell>
					<button id="olg_l" size="10" ui:inject="Button_left" led="true" />
					<button id="olg_r" size="10" ui:inject="Button_right" led="true" />
				</grid>
				<label text="labels.chan.in" padding="4" />
				<cell rows="3">
					<vsep pad.h="2" bg.color="bg" hreduce="true"/>
				</cell>
				<label text="labels.chan.out" padding="4" />
				
				<!-- row 4 -->
				<hsep pad.v="2" bg.color="bg" vreduce="true" />
				<hsep pad.v="2" bg.color="bg" vreduce="true" />
				<hsep pad.v="2" bg.color="bg" vreduce="true" />
				<hsep pad.v="2" bg.color="bg" vreduce="true" />
				<hsep pad.v="2" bg.color="bg" vreduce="true" />
				<hsep pad.v="2" bg.color="bg" vreduce="true" />

				<!-- row 5 -->
				<group ui:inject="GraphGroup" ipadding="0" hexpand="true" hfill="true" text="labels.graphs.time">
					<!-- Ocillogram graph -->
					<graph width.min="312" height.min="192" hexpand="true"
						hfill="true">
						<origin hpos="1" vpos="-1" visible="false" />

						<!-- Gray grid -->
						<ui:with ox="0" oy="1">
							<marker v="0.5" color="graph_alt_1" />
							<marker v="1.5" color="graph_alt_1" />
							<marker v="2.5" color="graph_alt_1" />
							<marker v="3.5" color="graph_alt_1" />
							<marker v="4.5" color="graph_alt_1" />
						</ui:with>

						<!-- Yellow grid -->
						<ui:with ox="0" oy="1">
							<marker v="1" color="graph_sec" />
							<marker v="2" color="graph_sec" />
							<marker v="3" color="graph_sec" />
							<marker v="4" color="graph_sec" />
						</ui:with>
						<ui:with ox="1" oy="0" color="graph_sec">
							<ui:for id="v" first="-18" last="6" step="6">
								<marker v="${v} db" />
							</ui:for>
						</ui:with>

						<!-- Meshes -->
						<mesh id="ctg_l" width="0" x.index="0" y.index="1"
							color="left_in" fcolor="left_in" fcolor.a="0.8" fill="true"
							visibility=":ilg_l" />
						<mesh id="ctg_r" width="0" x.index="0" y.index="1"
							color="right_in" fcolor="right_in" fcolor.a="0.8" fill="true"
							visibility=":ilg_r" />
						<mesh id="ctg_l" width="2" x.index="0" y.index="2"
							color="left" visibility=":olg_l" />
						<mesh id="ctg_r" width="2" x.index="0" y.index="2"
							color="right" visibility=":olg_r" />
						<mesh id="ctg_l" width="2" x.index="0" y.index="3"
							color="bright_blue" visibility=":grg_l" />
						<mesh id="ctg_r" width="2" x.index="0" y.index="3"
							color="bright_blue" visibility=":grg_r" />

						<!-- Boundaries -->
						<marker v="24 db" ox="1" oy="0" color="graph_prim"
							visibility="false" />
						<marker v="5" ox="0" oy="1" color="graph_prim"
							visibility="false" />

						<!-- Axis -->
						<axis min="0" max="5" angle="1.0" log="false"
							color="graph_prim" visibility="false" />
						<axis min="-24 db" max="12 db" angle="0.5" log="true"
							color="graph_prim" visibility="false" />

						<!-- Text -->
						<text x="5" y="-72 db" text="graph.units.s" halign="1"
							valign="1" color="graph_prim" />
						<ui:with y="-24 db" halign="1" valign="1"
							color="graph_prim">
							<text x="0" text="0" halign="-1" />
							<text x="1" text="1" />
							<text x="2" text="2" />
							<text x="3" text="3" />
							<text x="4" text="4" />
							<text x="5" text="graph.units.s" />
						</ui:with>
						<ui:with x="5" halign="1" valign="1" color="graph_prim">
							<text y="12 db" text="graph.units.db" text:value="0"
								valign="-1" />
							<ui:for id="v" first="-18" last="6" step="6">
								<text y="${v} db" text="${v}" />
							</ui:for>
						</ui:with>
					</graph>
				</group>
	
				<ui:with bg.color="bg_schema">

					<!-- Band gain reduction meter -->
					<ledmeter vexpand="true" vfill="true" angle="1">
						<ledchannel id="grm_l" min="-24 db" max="12 db"
							log="true" balance="0 db" balance.visibility="true" type="peak"
							activity=":grg_l" value.color="blue'"
							yellow.color="meter_yellow"
							balance.color="balance" />
						<ledchannel id="grm_r" min="-24 db" max="12 db"
							log="true" balance="0 db" balance.visibility="true" type="peak"
							activity=":grg_r" value.color="blue"
							yellow.color="meter_yellow"
							balance.color="balance" />
					</ledmeter>
					<!-- Band input level -->
					<ledmeter vexpand="true" vfill="true" angle="1">
						<ledchannel id="ilm_l" min="-60 db" max="12 db"
							log="true" type="rms_peak" peak.visibility="true"
							activity=":ilg_l"
							value.color="left_in"
							red.color="red"
							yellow.color="meter_yellow"
							balance.color="balance" />
						<ledchannel id="ilm_r" min="-60 db" max="12 db"
							log="true" type="rms_peak" peak.visibility="true"
							activity=":ilg_r"
							value.color="right_in"
							red.color="red"
							yellow.color="meter_yellow"
							balance.color="balance" />
					</ledmeter>
					<!-- Band output level -->
					<ledmeter vexpand="true" vfill="true" angle="1">
						<ledchannel id="olm_l" min="-60 db" max="12 db"
							log="true" type="rms_peak" peak.visibility="true"
							activity=":olg_l" value.color=":oclip ? 'left' : 'cycle_inactive'"
							red.color="red"
							yellow.color="meter_yellow"
							balance.color="balance" />
						<ledchannel id="olm_r" min="-60 db" max="12 db"
							log="true" type="rms_peak" peak.visibility="true"
							activity=":olg_r"
							value.color="right"
							red.color="red"
							yellow.color="meter_yellow"
							balance.color="balance" />
					</ledmeter>
					
					<!-- LUFS input meter -->
					<ledmeter vexpand="true" angle="1">
						<ledchannel id="lufs_il" min="-72" max="6" type="peak" log="false" value.color="lufs"/>
					</ledmeter>
	
					<!-- LUFS output meter -->
					<ledmeter vexpand="true" angle="1">
						<ledchannel id="lufs_ol" min="-72" max="6" type="peak" log="false" value.color="lufs"/>
					</ledmeter>
				</ui:with>
			</grid>
		</cell>
	</grid>
</plugin>
